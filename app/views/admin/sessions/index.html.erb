<h1>Listing sessions</h1>

<table>
  <tr>
    <th>Name</th>
    <th>Volunteers</th>
  </tr>

<% @sessions.each do |session| %>
  <tr class="<%= cycle('even', 'odd') %>">
    <td valign="top"><%= session.name %></td>
    <td>
      <table>
        <% session.volunteers.each do |volunteer| %>
          <tr>
            <td><%= link_to volunteer.name, "mailto:#{volunteer.email}" %> (<%= volunteer.phone %>)</td>
          </tr>
        <% end %>
      </table>
    </td>
  </tr>
<% end %>
</table>

<br />

<%= link_to 'Rename Sessions', rename_admin_sessions_path %>
<%= link_to "Export to Excel", export_admin_sessions_path %>